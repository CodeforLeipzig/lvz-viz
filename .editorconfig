# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 140
trim_trailing_whitespace = true

[*.bat]
end_of_line = crlf

[*.java]
ij_continuation_indent_size = 8
indent_size = 4

[*.md]
max_line_length = off
indent_size = 4

[*.ts]
quote_type = single
